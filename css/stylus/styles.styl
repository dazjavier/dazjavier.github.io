@font-face {font-family: "CaslonNo337W01-SmallCapsIt";
    src: url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.eot");
    src: url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.eot?#iefix") format("embedded-opentype"),
    url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.woff2") format("woff2"),
    url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.woff") format("woff"),
    url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.ttf") format("truetype"),
    url("http://db.onlinewebfonts.com/t/ec928480b30d707ebac8bce0e5876565.svg#CaslonNo337W01-SmallCapsIt") format("svg");
}

body
	background url('../img/icons-asphalt.jpg') repeat
	background-size 25%
	font-family Helvetica, Arial, sans-serif

.container
	box-sizing border-box
	margin auto
	max-width 1024px
	padding 15px

h1
	color white
	font-size 82px
	letter-spacing -5px
	margin 15% 0 0
	text-transform lowercase
	transition all .4s ease-in-out
	
h2
	color white
	font-size 52px
	letter-spacing -3px
	margin 0
	opacity .75
	padding 0

	span
		color #0095FF
		font-family CaslonNo337W01-SmallCapsIt

p
	color white
	opacity .5
	
.social
	list-style none
	margin 20px 0
	padding 0
	
	li
		display inline-block
		
		&:after
			color white
			content '|'
			margin 5px
			opacity .1
			
		&:last-child:after
			content ''
		
		a
			color white
			font-weight bold
			text-decoration none
			text-shadow 0 1px 0 rgba(255, 255, 255, .5)
			
		.dribbble
			color #ec4d8b
		.twitter
			color #55acee
		.github
			color #333333
	
















