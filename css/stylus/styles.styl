default_trans = all .4s ease-in-out

body
	background-color #FEFEFE
	font-family 'Open sans', 'Helvetica Neue', Arial, sans-serif

.container
	box-sizing border-box
	margin 5% auto
	max-width 1024px
	padding 15px

h1
	color rgba(0, 0, 0, .8)
	font-size 82px
	letter-spacing -5px
	margin 0
	transition default_trans
	@media screen and (max-width: 768px)
    font-size 62px
    text-align center
h2
	color rgba(0, 0, 0, .75)
	font-family Montserrat, sans-serif
	font-size 34px
	letter-spacing -2px
	margin 0
	opacity .75
	padding 0
	text-transform uppercase
	@media screen and (max-width: 768px)
    font-size 32px
    text-align center
	span
		color #0095FF
		margin 0 10px
		font-family CaslonNo337W01-SmallCapsIt

.shots
	max-width 100%
	margin 0
	padding 0 !important
	
	img
		display inline-block
		list-style none
		max-width 100px
	
p
	color rgba(0, 0, 0, .6)
	font-size 20px
	text-shadow 0 1px 0 white
	@media screen and (max-width: 768px)
    text-align center
	a
		color rgba(0, 0, 0, .9)
		font-weight 600
		text-decoration none
		transition default_trans
		&:hover
			color #0095FF !important
		@media screen and (max-width: 768px)
	  	text-align center
	  	
.dribbble
	color #ea4c89 !important
.github
	color #333 !important
.twitter
	color #1da1f2 !important
.mail
	color #da4a38 !important
.dashed
	text-decoration line-through
	font-size 17px
	opacity .6